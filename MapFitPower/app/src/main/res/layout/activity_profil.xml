<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">



    <!-- 1 | MainActivity RootView -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
                android:id="@+id/activity_main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:theme="@style/ToolBarStyle"/>
        <!-- FrameLayout for our fragments -->

        <RelativeLayout
                android:id="@+id/activity_main_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#97E2DAD5">

            <TextView
                    android:id="@+id/textView"
                    android:text="Visualisation du profil"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    />

            <TextView
                    android:id="@+id/textViewMail"
                    android:text="Mail"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

            <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextMail"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textViewMail"/>

            <TextView
                    android:id="@+id/textViewNom"
                    android:text="Nom"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>

            <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextNom"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textViewMail"/>

            <TextView
                    android:id="@+id/textViewPrenom"
                    android:text="Prenom"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/editTextMail"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

            <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPrenom"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textViewPrenom"/>


            <TextView
                    android:id="@+id/textViewAge"
                    android:text="Age"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/editTextNom"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>

            <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextAge"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textViewAge"/>

            <TextView
                android:id="@+id/textViewTaille"
                android:text="Taille"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/editTextPrenom"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTaille"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="210dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textViewTaille"/>

            <TextView
                    android:id="@+id/textViewPoid"
                    android:text="Poids"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/editTextAge"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>

            <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPoid"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="210dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textViewPoid"/>

            <TextView
                    android:id="@+id/textViewGenre"
                    android:text="Genre"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/editTextTaille"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

            <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextGenre"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textViewGenre"/>

            <Button
                    android:id="@+id/modifier"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:onClick="clickButton"
                    android:text="Modifier"/>
        </RelativeLayout>

    </LinearLayout>


    <!-- 2 | NavigationView -->
    <android.support.design.widget.NavigationView
            android:id="@+id/activity_main_nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/activity_main_nav_header"
            app:menu="@menu/activity_main_menu_drawer" />


</android.support.v4.widget.DrawerLayout>
